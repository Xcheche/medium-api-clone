#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

if [ -z "${POSTGRES_USER}" ]; then
    base_postgres_image_default_user="postgres"
    export POSTGRES_USER="${base_postgres_image_default_user}"
fi

export DATABASE_URL="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

python << END
import sys
import time
import psycopg2

suggest_unrecoverable_after = 30
start = time.time()
while True:
    try:
        psycopg2.connect(
            dbname="${POSTGRES_DB}",
            user="${POSTGRES_USER}",
            password="${POSTGRES_PASSWORD}",
            host="${POSTGRES_HOST}",
            port="${POSTGRES_PORT}"
        )
        print("Postgres is up - proceeding with startup")
        break
    except psycopg2.OperationalError as error:
        sys.stderr.write("waiting for PostgreSql to be available...\n")
        if time.time() - start > suggest_unrecoverable_after:
            sys.stderr.write("PostgreSql is unavailable - giving up\n")
            sys.exit(1)
        time.sleep(1)
END

>&2 echo "Postgres is up - proceeding with startup"

exec "$@"
# This script waits for PostgreSQL to be available before proceeding with the startup of the Django application
# It uses psycopg2 to check the connection and retries until successful or a timeout occurs
# The DATABASE_URL is constructed using the environment variables for PostgreSQL connection details
# The script is designed to be run as an entrypoint in a Docker container for a Django application
# It ensures that the database is ready before the Django application starts, preventing connection errors during